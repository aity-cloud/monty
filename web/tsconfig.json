{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "incremental": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM",
      "ScriptHost"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": false,
    "strict": true,
    "noEmit": true,
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
      "@shell/*": [
        "./node_modules/@rancher/shell/*"
      ],
      "@pkg/*": [
        "./pkg/*"
      ],
      "@components/*": [
        "@rancher/components/*"
      ]
    },
    "typeRoots": [
      "./node_modules",
      "./node_modules/@rancher/shell/types"
    ],
    "types": [
      "@types/node",
      "cypress",
      "rancher",
      "shell"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}